{{!
    @template mod_communication/template-list-group

    This template renders a list of templates for the communication activity module.

    Example context (json):
    {}
}}
<div data-region="template-list-group-container"
     data-start-day="{{$startday}}0{{/startday}}"
     data-end-day="{{$endday}}{{/endday}}"
     class="hidden">

    <h5 class="h6 m-t-1 {{$extratitleclasses}}{{/extratitleclasses}}" id="template-list-title-{{uniqid}}"><strong>{{$title}}{{/title}}</strong></h5>
    <ul class="list-group unstyled" data-region="template-list" aria-describedby="template-list-title-{{uniqid}}">
        <li class="list-group-item template-list-item active" data-region="template-list-item">
            <div class="row">
                <div class="col-sm-8 col-lg-6 col-xl-7">
                    <div class="d-inline-block template-name-container">
                        <p class="template-name text-truncate">{{#str}} name, mod_communication {{/str}}</p>
                    </div>
                </div>
                <div class="col-sm-4 col-lg-6 col-xl-5">
                    <div class="row">
                        <div class="col-lg-5 text-xs-right text-lg-left text-truncate">{{#str}} type, mod_communication {{/str}}</div>
                        <div class="hidden-md-down col-lg-7 text-truncate">
                        </div>
                    </div>
                </div>
            </div>
        </li>
        {{$templatelistitems}}
            {{> mod_communication/template-list-items }}
        {{/templatelistitems}}
    </ul>
</div>
