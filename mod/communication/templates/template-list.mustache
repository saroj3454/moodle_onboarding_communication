{{!
    @template mod_communication/template-list

    This template renders a list of templates for the communication activity module.

    Example context (json):
    {
    }
}}
<div data-region="template-list-container"
     data-limit="{{$limit}}20{{/limit}}"
     data-course-id="{{$courseid}}{{/courseid}}"
     data-last-id="{{$lastid}}{{/lastid}}"
     data-midnight="{{midnight}}"
     id="template-list-container-{{$courseid}}{{/courseid}}">

    <div data-region="template-list-content">
        {{< mod_communication/template-list-group }}
            {{$title}}{{/title}}
            {{$extratitleclasses}}{{/extratitleclasses}}
            {{$startday}}30{{/startday}}
            {{$endday}}{{/endday}}
        {{/ mod_communication/template-list-group }}

        <div class="text-xs-center text-center m-y-2">
            <button type="button" class="btn btn-secondary" data-action="view-more">
                {{#str}} viewmore {{/str}}
                <span class="hidden" data-region="loading-icon-container">
                    {{> core/loading }}
                </span>
            </button>
        </div>
    </div>
    <div class="hidden text-xs-center text-center m-t-3" data-region="empty-message">
        <img class="empty-placeholder-image-lg"
             src="{{urls.notemplates}}"
             alt="{{#str}} notemplates, mod_communication {{/str}}">
        <p class="text-muted m-t-1">{{#str}} notemplates, mod_communication {{/str}}</p>
    </div>
</div>
{{#js}}
require(['jquery', 'mod_communication/template_list'], function($, EventList) {
    var root = $("#template-list-container-{{$courseid}}{{/courseid}}");
    EventList.registerEventListeners(root);
});
{{/js}}
