{{!
    @template mod_communication/types-view

    This template renders the types view for the communication activity module.

    Example context (json):
    {}
}}
<div id="types-view-{{uniqid}}" data-region="types-view">
    <div class="text-xs-left">
        <a class="btn btn-default" href="{{config.wwwroot}}/mod/communication/type.php">
            {{#str}} newtype, mod_communication {{/str}}
        </a>
    </div>

    {{> mod_communication/types-view-table }}

</div>
{{#js}}
require(['jquery', 'core/custom_interaction_events'], function($, customEvents) {
    var root = $('#types-view-{{uniqid}}');
    customEvents.define(root, [customEvents.events.activate]);
    root.on(customEvents.events.activate, '[data-toggle="btns"] > .btn', function() {
        root.find('.btn.active').removeClass('active');
    });
});
{{/js}}
