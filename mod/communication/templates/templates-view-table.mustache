{{!
    @template mod_communication/templates-view-table

    This template renders the templates view by message type for the communication activity module.

    Example context (json):
    {}
}}
<div data-region="templates-view-table" id="templates-view-table-{{uniqid}}">
    {{< mod_communication/template-list }}
        {{$limit}}20{{/limit}}
    {{/ mod_communication/template-list }}
</div>
{{#js}}
    require(['jquery', 'mod_communication/template_list'], function($, EventList) {
    var root = $("#templates-view-table-{{uniqid}}").find('[data-region="template-list-container"]');
    EventList.load(root);
    });
{{/js}}
